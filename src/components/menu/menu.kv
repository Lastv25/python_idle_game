#:kivy 2.1.0
#: include components/elements/buttons.kv

<Menu>:
    name: "menu"
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
            source: "round.png"
    BoxLayout:
        orientation: "vertical"
        pos_hint: {'center_x': 0.5, 'center_y':0.5}
        size_hint: 0.75, 0.75
        padding: 50
        spacing: 20
        Label:
            text:"Magic City Idle"
            font_size: self.width/10
            font_name: 'src/assets/fonts/Magic Retro.ttf'
        RoundedButton:
            text:"Start Game"
            on_release: 
                app.root.current = 'mainscreen'
                app.root.transition.direction = 'left'
        RoundedButton:
            text:"Exit"
        RoundedButton:
            text:"About" 