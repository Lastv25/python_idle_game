#:kivy 2.1.0

<MainScreen>:
    name: "mainscreen"
    on_enter: app.root.current_screen.text_pop()

    GridLayout:
        cols: 2
        rows: 2
        size: root.width, root.height
        spacing: 10
        row_default_height: 100
        row_force_default: True


        BoxLayout:
            orientation: 'horizontal'
            size_hint: None,None
            spacing: 20

            Button:
                text:"Exit"
                on_release: 
                    app.root.current = 'menu'
                    app.root.transition.direction = 'right'

            Button:
                text:"settings"
                on_release: print('hello: No settings yet')

        
        BoxLayout:
            orientation: 'horizontal'
            padding: 50
            spacing: 20

        ScrollView:
            id: scroll_view
            always_overscroll: False
            size_hint: None, None
            BoxLayout:
                size_hint: None, None
                height: self.minimum_height
                orientation: 'vertical'
                Label:
                    id: label
                    size_hint: None, None
                    size: self.texture_size 

        BoxLayout:
            orientation: 'vertical'
            padding: 50
            spacing: 20
