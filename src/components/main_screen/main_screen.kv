#:kivy 2.1.0
#: include components/elements/buttons.kv

<MainScreen>:
    name: "mainscreen"
    on_enter: app.root.current_screen.text_init()

    AnchorLayout: 

        anchor_x: 'left'
        anchor_y: 'bottom'

        BoxLayout:
            size_hint: None, None
            size: 200, 20
            
            spacing: 10

            RoundedButton:
                text:"Exit"
                on_release: 
                    app.root.current = 'menu'
                    app.root.transition.direction = 'right'

            RoundedButton:
                text:"settings"
                on_release: print('hello: No settings yet')

    GridLayout:
        cols: 2
        rows: 2
        size: root.width, root.height
        spacing: 10


        BoxLayout:
            orientation: 'horizontal'
            size_hint: None,None
            spacing: 20

            

        
        BoxLayout:
            orientation: 'horizontal'
            padding: 50
            spacing: 20

        ScrollView:
            id: scroll_view
            always_overscroll: False
            BoxLayout:
                size_hint: None, None
                height: self.minimum_height
                orientation: 'vertical'
                Label:
                    id: label
                    size_hint: None, None
                    size: self.texture_size 

        BoxLayout:
            orientation: 'vertical'
            padding: 50
            spacing: 20
