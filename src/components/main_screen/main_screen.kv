#:kivy 2.1.0

<MainScreen>:
    name: "mainscreen"
    on_enter: app.root.current_screen.text_pop()

    GridLayout:
        cols: 2
        rows: 2
        size: root.width, root.height
        spacing: 10
        
        ScrollView:
            id: scroll_view
            always_overscroll: False
            multiline: True
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                Label:
                    id: label
                    size_hint: None, None
                    size: self.texture_size 
