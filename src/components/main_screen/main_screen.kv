#:kivy 2.1.0

<MainScreen>:
    name: "mainscreen"
    on_enter: app.root.current_screen.text_pop()

    GridLayout:
        cols: 2
        rows: 2
        size: root.width, root.height
        spacing: 10

        BoxLayout:
            orientation: 'horizontal'
            padding: 50
            spacing: 20

            Button:
                text:"Exit"
                on_release: print('hello')

            Button:
                text:"other"
                on_release: print('hello')

        
        BoxLayout:
            orientation: 'horizontal'
            padding: 50
            spacing: 20

        ScrollView:
            id: scroll_view
            always_overscroll: False
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                Label:
                    id: label
                    size_hint: None, None
                    size: self.texture_size 

        BoxLayout:
            orientation: 'vertical'
            padding: 50
            spacing: 20
